---
import "../globals.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MainHead from "./MainHead.astro";
const { title = "Astro Website", seoTitle, seoDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <MainHead
        title={title}
        seoTitle={seoTitle}
        seoDescription={seoDescription}
    />
    <body class="flex flex-col h-screen mx-auto font-sans">
        <Header />
        <main class="flex-1 max-w-6xl mx-auto">
            <!-- All page content will be injected here using the 'slot' tag -->
            <slot />
        </main>
        <Footer />
    </body>
</html>
