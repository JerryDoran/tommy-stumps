---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Image } from 'astro:assets';
import stump from '../images/stump-logo4.png'
---

<header class="bg-black text-neutral-200 w-full p-4 sticky top-0 z-10">
    <Astronav>
    <div class="md:flex items-center max-w-7xl mx-auto">
        <div class="w-full flex items-center justify-between py-0 px-5"> 
            <div class="flex items-center">                         
                <a href="/" class='text-xl max-sm:text-lg -ml-4 font-bold'>
                    <Image src={stump} alt="a tree stump" width="100" />
                </a>
            </div>
            
            <div class="block md:hidden">
                <MenuIcon />
            </div>
        </div>
        <MenuItems
            class="hidden z-50 max-md:absolute md:flex max-md:top-28 max-md:right-5 animate-fade"
        >
            <ul
                class="flex flex-col p-7 bg-black text-neutral-100 gap-5 shadow-lg md:shadow-none md:flex-row md:bg-transparent md:p-0 rounded-lg font-bold text-lg"
            >
                <li
                    class="py-0 px-3 transition duration-200 block hover:text-green-300 w-full"
                >
                    <a href="/">Home</a>
                </li>
                <li
                    class="py-0 px-3 transition duration-200 hover:text-green-300"
                >
                    <a href="/about">About</a>
                </li>
                <li
                    class="py-0 px-3 transition duration-200 hover:text-green-300"
                >
                    <a href="/gallery">Gallery</a>
                </li>
                <li
                    class="py-0 px-3 transition duration-200 hover:text-green-300"
                >
                    <a href="/contact">Contact</a>
                </li>
            </ul>
        </MenuItems>
    </div>
</Astronav>
   
</header>
